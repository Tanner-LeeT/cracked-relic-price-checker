<Window x:Class="WarframeRelicScanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Warframe Relic Scanner" Height="450" Width="600"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Warframe Relic Scanner"
                   FontSize="20" FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>

        <!-- Results Box -->
        <TextBox x:Name="ResultsTextBox"
                 Grid.Row="1"
                 FontFamily="Consolas"
                 FontSize="14"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 TextWrapping="Wrap"
                 IsReadOnly="True"
                 Background="#FF1E1E1E" Foreground="White"
                 Margin="0,0,0,10"/>

        <!-- Scan Button -->
        <Button x:Name="ScanButton"
                Grid.Row="2"
                Content="Scan Now"
                Height="40" Width="120"
                HorizontalAlignment="Center"
                Click="ScanButton_Click"/>
        
        <Button Content="Test OCR from Image"
        Grid.Row="2"
        Height="30" Width="180"
        HorizontalAlignment="Right"
        Click="TestOcrButton_Click"
        Margin="0,0,10,10"/>
    </Grid>
</Window>